{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2017",
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [".eslintrc.js", "src", "pages", "globals.ts", "types/*.ts"],
  "exclude": [
    "**/__snapshots__/**",
    "**/test/**",
    "**/*.test.ts",
    "node_modules"
  ]
}
